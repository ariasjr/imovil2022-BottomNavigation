<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/codes"
    app:startDestination="@id/mainCodes">

    <fragment
        android:id="@+id/mainCodes"
        android:name="es.imovil.fcrtrainerbottom.MainCodesFragment"
        android:label="MainCodes"
        tools:layout="@layout/fragment_main_codes">
        <action
            android:id="@+id/action_mainCodesFragment_to_codesFirstExerciceFragment"
            app:destination="@id/codesFirstExerciceFragment" />
        <action
            android:id="@+id/action_mainCodes_to_binaryExerciseFragment2"
            app:destination="@id/binaryExerciseFragment2" />
      <action
            android:id="@+id/action_mainCodesFragment_to_hexadecimalExerciseFragment"
            app:destination="@id/hexadecimalExerciceFragment" />
        <action
            android:id="@+id/action_mainCodesFragment_to_signalMagnitudeFragment"
            app:destination="@id/signedMagnitudeExerciseFragment" />
    </fragment>
    <fragment
        android:id="@+id/codesFirstExerciceFragment"
        android:name="es.imovil.fcrtrainerbottom.CodesFirstExerciceFragment"
        android:label="fragment_codes_first_exercice"
        tools:layout="@layout/fragment_codes_first_exercice" />
    <fragment
        android:id="@+id/binaryExerciseFragment2"
        android:name="es.imovil.fcrtrainerbottom.BinaryExerciseFragment"
        android:label="BinaryExerciseFragment" />
  <fragment
        android:id="@+id/hexadecimalExerciceFragment"
        android:name="es.imovil.fcrtrainerbottom.HexadecimalExerciseFragment"
        android:label="fragment_hexadecimal_exercice"
        tools:layout="@layout/fragment_hexadecimal_exercise" />
    <fragment
        android:id="@+id/signedMagnitudeExerciseFragment"
        android:name="es.imovil.fcrtrainerbottom.SignedMagnitudeExerciseFragment"
        android:label="SignedMagnitudeExerciseFragment" />
</navigation>